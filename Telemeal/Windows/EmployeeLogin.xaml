<Window x:Class="Telemeal.Windows.EmployeeLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Telemeal.Windows"
        mc:Ignorable="d"
        Title="EmployeeLogin" Height="300" Width="300" WindowState="Maximized">
    <Viewbox>
        <StackPanel>
            <TextBlock>Enter the ID Number:</TextBlock>
            <PasswordBox Name="EmployeeID" PasswordChar="*" PasswordChanged="EmployeeID_PasswordChanged"></PasswordBox>
            <TextBlock>Enter Employee Name:</TextBlock>
            <TextBox Name="EmployeeName"></TextBox>
            <Button Margin="10" Click="Enter_Click" Content="Enter"/>
        </StackPanel>
    </Viewbox>
</Window>
