<Page x:Class="Telemeal.Pages.EmployeeLogin_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Telemeal.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="EmployeeLogin_Page">

    <Viewbox>
        <StackPanel>
            <TextBlock>Enter the ID Number:</TextBlock>
            <PasswordBox Name="EmployeeID" PasswordChar="*" PasswordChanged="EmployeeID_PasswordChanged"></PasswordBox>
            <TextBlock>Enter Employee Name:</TextBlock>
            <TextBox Name="EmployeeName"></TextBox>
            <Button Margin="10" Click="Enter_Click" Content="Enter"/>
        </StackPanel>
    </Viewbox>
</Page>
