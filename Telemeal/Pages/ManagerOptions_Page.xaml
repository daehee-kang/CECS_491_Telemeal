<Page x:Class="Telemeal.Pages.ManagerOptions_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Telemeal.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ManagerOptions_Page">

    <Viewbox>
        <UniformGrid Rows="2" Columns="2">
            <Button Grid.Column="0" Name="EditEmployee" Margin="10" Height="70" VerticalAlignment="Top" Click="Edit_Employee_Click" Content="Edit Employee"/>
            <Button Grid.Column="1" Name="EditMenu" Margin="10" Height="70" VerticalAlignment="Top" Click="Edit_Menu_Click" Content="Edit Menu"/>
            <Button Grid.Row="1" Grid.Column="0" Name="bInvoice" Margin="10" Height="70" VerticalAlignment="Top" Click="Invoice_Click" Content="Invoice"/>
            <Button Grid.Row="1" Grid.Column="1" Name="bBack" Margin="10" Height="70" VerticalAlignment="Top" Click="Back_Click" Content="Back"/>
        </UniformGrid>
    </Viewbox>
</Page>
